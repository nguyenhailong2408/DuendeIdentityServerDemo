@{
	ViewData["Title"] = "Home Page";
}

@if (!User.Identity.IsAuthenticated)
{
	<a asp-controller="Auth" asp-action="Login">Login</a>
}
else
{
	<a asp-controller="Auth" asp-action="Logout">Logout</a>
	<a asp-controller="Auth" asp-action="Tokens">View Tokens</a>
	<a asp-controller="Home" asp-action="CallApi">View Data Protected</a>
}

